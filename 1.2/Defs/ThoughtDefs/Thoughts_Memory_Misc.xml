<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>VSIE_InspirationSatisfied</defName>
    <durationDays>15</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>inspiration satisfied</label>
        <description>I have completed my aspiration!</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>VSIE_InspirationNotSatisfied</defName>
    <durationDays>15</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>inspiration not satisfied</label>
        <description>I have failed to complete my aspiration.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>VSIE_HadNiceChatWithBeer</defName>
    <durationDays>3</durationDays>
    <stackLimit>10</stackLimit>
    <stages>
      <li>
        <label>had a nice chat with a beer</label>
        <description>I enjoyed the little chit chat and a cold one in my hand.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
